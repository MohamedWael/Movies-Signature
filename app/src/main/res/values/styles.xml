<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="Layout">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@drawable/bottom_sharp_background</item>

	</style>

	<style name="LayoutRounded" parent="Layout">
		<item name="android:background">@drawable/bottom_rounded_background</item>
	</style>

	<style name="MainTitle" >
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/mainTitleTextColor</item>
		<item name="android:textSize">@dimen/main_title_text_size</item>
	</style>

	<style name="Card">
		<item name="cardCornerRadius">@dimen/card_corner_radius</item>
		<item name="android:layout_margin">@dimen/card_margin</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

</resources>